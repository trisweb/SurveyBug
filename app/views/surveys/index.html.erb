<h1>SurveyBug</h1>
<h2>Create surveys and collect results quickly and easily!</h2>

<h3><%= link_to 'Create a New Survey', new_survey_path %></h3>

<hr />

<h3>Available Surveys:</h3>

<table class="survey_list">
  <tr>
    <th>Name (Click to Take!)</th>
    <th>Description</th>
    <th colspan="4">Actions</th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td width="25%"><strong><%= link_to survey.name, take_survey_path(survey) %></strong></td>
    <td width="50%"><%= survey.description %></td>
	<td class="action"><%= link_to 'Take', take_survey_path(survey) %></td>
    <td class="action"><%= link_to 'Edit', edit_survey_path(survey) %></td>
	<td class="action"><strong><%= link_to 'Results', survey_results_path(survey) %></strong></td>
    <td class="action"><%= link_to 'Remove', survey, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Create New Survey', new_survey_path %></p>

