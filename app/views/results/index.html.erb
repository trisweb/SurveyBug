<h2>Listing results for "<%= @survey.name %>"</h2>

<table>
  <tr>
    <th>Date</th>
    <th>Username</th>
    <th>Email</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @results.each do |result| %>
  <tr>
    <td><%= result.date %></td>
    <td><%= result.username %></td>
    <td><%= result.email %></td>
    <td><%= result.content %></td>
    <td><%= link_to 'Show', result %></td>
    <td><%= link_to 'Edit', edit_result_path(result) %></td>
    <td><%= link_to 'Destroy', result, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to "Take this Survey", take_survey_path(@survey)%>

<p><%= link_to "< Back to Surveys", surveys_path %></p>
